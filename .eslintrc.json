{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint","prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "airbnb-base"
  ],
  "rules": {
    "quotes": "off",
    "arrow-parens": "off",
    "comma-dangle": "off",
    "implicit-arrow-linebreak": "off",
    "import/prefer-default-export": "off",
    "import/extensions": [
      "error",
      {
        "ts": "never"
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80
      }
    ]
  },
  "overrides": [
    {
     "files": ["**/*.spec.ts"],
        "rules": {
           "no-console": "off"   
        }
    }
   ],
  "env": {
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
